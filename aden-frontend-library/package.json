{
  "name": "aden-frontend-library",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssr": "ng build && ng run aden_frontend_library:server",
    "serve:ssr": "node dist/aden_frontend_library/server/server.mjs",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron": "ng build --configuration production --base-href ./ --deploy-url ./ && electron .",
    "dist": "ng build --configuration production --base-href ./ --deploy-url ./ && electron-builder"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.15",
    "@angular/compiler": "^20.3.15",
    "@angular/core": "^20.3.15",
    "@angular/forms": "^20.3.15",
    "@angular/platform-browser": "^20.3.15",
    "@angular/platform-server": "^20.3.15",
    "@angular/router": "^20.3.15",
    "@angular/ssr": "^20.3.13",
    "express": "^5.1.0",
    "gsap": "^3.13.0",
    "jwt-decode": "^4.0.0",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.13",
    "@angular/cli": "^20.3.13",
    "@angular/compiler-cli": "^20.3.15",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "@types/prismjs": "^1.26.5",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  },
  "build": {
    "productName": "Aden Angular Library",
    "appId": "com.aden.angularlibrary",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "EnsslinAdrian",
        "repo": "Aden-Angular-Library"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "electron/icons/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "electron/icons/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "electron/icons"
    }
  }
}
